


<p id="notice"><%= notice %></p>

<div id="title">
  <h1>Listing Posts</h1>
</div>

<table>
  <thead>
    <tr id="tableHeaders">
      <th>Title</th>
      <th>Post</th>
      <th>User</th>
      <th>Time Posted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr id="post">   
        <td><%= article.title %></td>
        <td><%= article.post %></td>
        <td><%= article.user.email %></td>
        <td> <%= (article.created_at.to_formatted_s(:long_ordinal)) %> </td>
        <td><%= link_to 'Show', article %></td>
        <% if article.user == current_user %>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="newPost">
<%= link_to 'New Post', new_article_path %>
</div>
